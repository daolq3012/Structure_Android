<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    >
    <EditText
        android:id="@+id/emailOrPhoneEditText"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_rectangle_stroked_thirty_five_radius"
        android:hint="@string/email_or_phone_number"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orTextView"
        tools:ignore="TextFields"
        />
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_rectangle_stroked_thirty_five_radius"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingEnd="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailOrPhoneEditText"
        tools:ignore="TextFields"
        />
    <TextView
        android:id="@+id/orTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/or"
        android:textColor="@color/colorTextBlackGray"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold|italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmailView"
        />
    <TextView
        android:id="@+id/errorEmailOrPhoneNumberText"
        android:layout_width="@dimen/dp_270"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:paddingTop="@dimen/dp_3"
        android:textColor="@color/colorOrangeFlamingo"
        android:textSize="@dimen/sp_12"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/nextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailOrPhoneEditText"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/gmailView"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebookView"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_40"
            android:background="@color/colorFlamePea"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/gmailImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="@+id/gmailText"
                app:layout_constraintLeft_toLeftOf="@+id/gmailText"
                app:layout_constraintTop_toTopOf="@+id/gmailText"
                app:srcCompat="@drawable/ic_gmail"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:id="@+id/gmailText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/login_with_gmail"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                app:layout_constraintBottom_toBottomOf="@+id/gmailView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/gmailView"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/nextView"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        app:cardCornerRadius="@dimen/dp_5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditText"
        >
        <TextView
            android:id="@+id/nextText"
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bg_rectangle_two_radius"
            android:backgroundTint="@color/colorBlack"
            android:elevation="@dimen/dp_3"
            android:gravity="center"
            android:text="@string/next"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/facebookView"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_16"
        app:cardCornerRadius="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <LinearLayout
            android:layout_width="@dimen/dp_270"
            android:layout_height="@dimen/dp_40"
            android:background="@color/colorSanMarino"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/facebookImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                app:layout_constraintBottom_toBottomOf="@+id/gmailText"
                app:layout_constraintLeft_toLeftOf="@+id/gmailText"
                app:layout_constraintTop_toTopOf="@+id/gmailText"
                app:srcCompat="@drawable/ic_facebook"
                tools:ignore="ContentDescription"
                />
            <TextView
                android:id="@+id/facebookText"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/login_with_facebook"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/demoText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/bg_right_round_rectangle_thirty_radius"
        android:gravity="center"
        android:padding="@dimen/dp_10"
        android:text="@string/view_demo"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/sp_16"
        android:layout_marginTop="@dimen/dp_50"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextView"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
